<h1>Showing all the movies in your chosen list</h1>

<%= link_to "add a movie", new_list_bookmark_path(@list) %>


<br><br><% @list.bookmarks.each do |bookmark| %>
<p><%= bookmark.movie.title %></p>
<p><%= bookmark.comment %></p>
<p><%= bookmark.movie.overview %></p>
<%= image_tag bookmark.movie.poster_url, height: 300, width: 300, crop: :fill %>
<%#= bookmark.movie.poster_url %>
<p>Rating: <%= bookmark.movie.rating %></p>
<%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<br><br><% end %>


<%= link_to "Return to Lists", lists_path %>
